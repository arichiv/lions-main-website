mixin show-section(show_name, show_id, show_date, show_location, show_def, show_def_src, carousel_images)
  .container-fluid(id=show_id, class='show_section')
    .container: .row: .col-md-12
      br
      br
      h1(class='text-center')!= show_name
      h2(class='text-center')!= show_date + ' - ' + show_location
      br
      blockquote.blockquote-reverse
        h3!= show_def
        footer!= show_def_src
      if carousel_images.length > 0
        br
        .carousel.slide(data-ride='carousel', id='carousel-'+show_id)
          ol.carousel-indicators
            each val, index in carousel_images
              if index == 0
                li.active(data-target='#carousel-'+show_id data-slide-to=index)
              else
                li(data-target='#carousel-'+show_id data-slide-to=index)
          .carousel-inner
            each val, index in carousel_images
              if index == 0
                .item.active: center
                  a(href='/static/'+val data-toggle='lightbox')
                    img.img-responsive(src='/static/'+val)
              else
                .item: center
                  a(href='/static/'+val data-toggle='lightbox')
                    img.img-responsive(src='/static/'+val)
          a(class='left carousel-control' href='#carousel-'+show_id data-slide='prev')
              span(class='glyphicon glyphicon-chevron-left')
          a(class='right carousel-control' href='#carousel-'+show_id data-slide='next')
              span(class='glyphicon glyphicon-chevron-right')
        br
      br
      br

mixin show-profile(profile)
  br
  h1: a(href=profile.website, target="__blank")= profile.name
  h3= profile.biography
  br

