mixin show-section(show_id, show_name, show_date, show_location, show_def, show_def_src, carousel_images)
  .container-fluid(id=show_id)
    .container: .row: .col-md-12
      h1(class='text-center')= show_name
      h1(class='text-center')= show_date
      h1(class='text-center')= show_location
      blockquote.blockquote-reverse
        h2= show_def
        footer= show_def_src
      if carousel_images
        carousel.slide(data-ride='carousel', id='carousel-'+show_id)
          ol.carousel-indicators
            each val, index in carousel_images
              if index == 0
                li.active(data-target='#carousel-'+show_id data-slide-to=index)
              else
                li(data-target='#carousel-'+show_id data-slide-to=index)
          .carousel-inner
            each val, index in carousel_images
              if index == 0
                .item.active
                  center: img.img-responsive(src='static/'+val)
              else
                .item
                  center: img.img-responsive(src='static/'+val)
        br

